{
  "name": "react-interval",
  "version": "1.0.4",
  "description": "Safe React wrapper for setInterval",
  "main": "lib/index.js",
  "scripts": {
    "build": "npm run build:clean && npm run build:lib && npm run build:example && npm run build:build",
    "build:clean": "rm -rf lib example build",
    "build:lib": "babel src --out-dir lib --source-maps --ignore src/example",
    "build:example": "webpack",
    "build:build": "BUILD=1 webpack",
    "prepublish": "npm run build",
    "start": "NODE_ENV=development webpack-dev-server --history-api-fallback",
    "lint": "eslint *.js src test",
    "karma": "karma start ./karma.conf.js",
    "test": "npm run karma --  --single-run --reporters nyan",
    "test:dev": "npm run karma -- --no-single-run --auto-watch --reporters nyan",
    "test:cov": "COVERAGE=1 npm run karma -- --single-run --reporters coverage",
    "check": "npm run lint && npm run test && npm run build",
    "coveralls": "cat ./reports/coverage/lcov.info | `npm bin`/coveralls"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nkbt/react-interval.git"
  },
  "keywords": [
    "component",
    "react-component",
    "react",
    "interval",
    "timer",
    "timeout",
    "setTimeout",
    "setInterval",
    "repeater"
  ],
  "author": "Nik Butenko <nik@butenko.me> (http://butenko.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nkbt/react-interval/issues"
  },
  "homepage": "https://github.com/nkbt/react-interval",
  "peerDependencies": {
    "react": "^0.13.3"
  },
  "devDependencies": {
    "babel": "^5.8.3",
    "babel-core": "^5.8.3",
    "babel-loader": "^5.3.2",
    "coveralls": "^2.11.3",
    "eslint": "^0.24.1",
    "eslint-loader": "^0.14.2",
    "eslint-plugin-react": "^3.0.0",
    "html-webpack-plugin": "^1.6.0",
    "inject-loader": "^2.0.0",
    "isparta-loader": "^0.2.0",
    "jasmine-core": "^2.3.4",
    "karma": "^0.12.37",
    "karma-coverage": "^0.4.2",
    "karma-jasmine": "^0.3.6",
    "karma-junit-reporter": "^0.3.3",
    "karma-nyan-reporter": "0.2.1",
    "karma-phantomjs-launcher": "^0.2.0",
    "karma-webpack": "^1.6.0",
    "mkdirp": "^0.5.1",
    "node-libs-browser": "^0.5.2",
    "phantomjs": "^1.9.17",
    "react-hot-loader": "^1.2.8",
    "rimraf": "^2.4.2",
    "tap-xunit": "^1.1.1",
    "webpack": "^1.10.5",
    "webpack-dev-server": "^1.10.1"
  }
}
